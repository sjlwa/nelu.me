---
import MusicPlatformLink from './MusicPlatformLink.astro';

import SpotifyLogo from './../assets/music-platforms-logos/spotify.svg?raw';
import YoutubeLogo from './../assets/music-platforms-logos/youtube.svg?raw';
import AppleLogo from './../assets/music-platforms-logos/apple.svg?raw';
import AmazonLogo from './../assets/music-platforms-logos/amazon.svg?raw';

---
<ul class="music-platforms">
  <MusicPlatformLink name="spotify" svg={SpotifyLogo}
    url="https://open.spotify.com/artist/7CA2VhlKcqsnQPRyu1fXEV"/>
  <MusicPlatformLink name="youtube" svg={YoutubeLogo}
    url="https://music.youtube.com/watch?v=ycaHNEyC8J4&si=vtNeHtVFRBdlKWmm"/>
  <MusicPlatformLink name="apple" svg={AppleLogo}
    url="https://music.apple.com/mx/album/quiero-un-t%C3%A9-quiero/1807242914?i=1807242918"/>
  <MusicPlatformLink name="amazon" svg={AmazonLogo}
    url="https://music.amazon.com.mx/albums/B0F3ZZSG9F?ref=dm_sh_am4a_B0F3ZNRP1D_6r7PQAiW4nW1HJ&trackAsin=B0F3ZS4JKP"/>
</ul>

<style>
  .music-platforms {
    width: 100%;
    display: flex;
    flex-direction: row;
    list-style-type: none;
    gap: 1rem;
    align-items: center;
    justify-content: flex-end;
    right: 2rem;
    position: absolute;
    top: 0;
    z-index: 1;
  }
</style>
